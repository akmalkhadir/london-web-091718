<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
      <li>
        <%= error %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @ingredient do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <hr>
  <h2>Available Cupcakes:</h2>
  <%= f.collection_check_boxes :cupcake_ids, @cupcakes, :id, :name %>
  <hr>

  <%= f.submit id: 'submit' %>
<% end %>
